<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, class: "label-login" %> <br>
      <%= f.email_field :email, class: 'form-control' %> <br>

      <%= f.label :password, class: "label-login" %> <br>
      <%= f.password_field :password, class: 'form-control' %> <br>

      <%= f.submit "Log in", class: "btn btn-primary btn-block btn-login" %> <br>
    <% end %>
    <br>
    <%= link_to "Sign up", signup_path %> <br>
    <%= link_to "Didn't receive confilmation instructions?", '#' %>
  </div>
</div>