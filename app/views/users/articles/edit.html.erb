<h1 class="text-center">記事の編集</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      
      <%= form_with(model:@article, url:users_article_path, local: true) do |f| %>
        <%= render  'devise/shared/error_messages',resource:@article %> 
      
        <%= f.label :title , class: "label-form" %>
        <%= f.text_field :title, class: "form-control" %>
        
        <%= f.label :content, class: "label-form" %>
        <%= f.text_area :content, rows:5, class: "form-control" %>

        <%= f.label :img %> 
        <%= f.file_field :img %> 

        <div class="text-center">
          <%= f.submit "更新する", class: "btn btn-primary btn-pad" %>
        </div>
      <% end %>
      <%= link_to "戻る", users_articles_path %>
    </div>
  </div>
</div>